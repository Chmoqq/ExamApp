<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/test_info_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5"
                android:fontFamily="@font/roboto_regular"
                android:gravity="center"
                android:text="Поздравляем!"
                android:textColor="@color/black_spec"
                android:textSize="30sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"
                android:fontFamily="@font/roboto_regular"
                android:gravity="center"
                android:text="Вы решили тест"
                android:textColor="@color/black_spec"
                android:textSize="23sp" />

            <TextView
                android:id="@+id/total_time_spent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"
                android:fontFamily="@font/roboto_regular"
                android:gravity="center"
                android:textColor="@color/black_spec"
                android:textSize="23sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black_spec" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:gravity="center">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="7dp">

                <TextView
                    android:id="@+id/right_quests_of_final_page"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:layout_marginStart="20dp"
                    android:fontFamily="@font/roboto_bold"
                    android:gravity="center"
                    android:text="8"
                    android:textColor="@color/red_test_info"
                    android:textSize="140sp" />

                <TextView
                    android:id="@+id/final_page_from"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@id/right_quests_of_final_page"
                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_toRightOf="@id/right_quests_of_final_page"
                    android:fontFamily="@font/roboto_bold"
                    android:text="из"
                    android:textColor="@color/black_spec"
                    android:textSize="40sp" />

                <TextView
                    android:id="@+id/total_quest_final_page"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@id/right_quests_of_final_page"
                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_toEndOf="@id/final_page_from"
                    android:layout_toRightOf="@id/final_page_from"
                    android:fontFamily="@font/roboto_bold"
                    android:text="33"
                    android:textColor="@color/orange_test_info"
                    android:textSize="100sp" />

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="10dp"
            android:background="@color/black" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/star1_final_page"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/star2_final_page"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginStart="10dp"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/star3_final_page"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="20dp"
                android:layout_marginRight="20dp"
                android:layout_weight="1" />

        </LinearLayout>

        <com.google.android.gms.ads.AdView
            android:layout_marginTop="20dp"
            android:id="@+id/ad_total_stats"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            ads:adSize="SMART_BANNER"
            ads:adUnitId="ca-app-pub-3940256099942544/6300978111" />

    </LinearLayout>

    <FrameLayout
        android:id="@+id/back_to_main_btn"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="5dp"
        android:layout_marginEnd="80dp"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="80dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/rounded_corners_blue">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/roboto_bold"
            android:gravity="center"
            android:text="На главную"
            android:textColor="@color/white"
            android:textSize="25sp" />

    </FrameLayout>

</RelativeLayout>