        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="3dp"
            android:layout_weight="0.085"
            android:baselineAligned="false"
            android:orientation="horizontal">

            <FrameLayout
                android:id="@+id/prev_quest_btn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="5dp"
                android:layout_marginEnd="25dp"
                android:layout_marginLeft="27dp"
                android:layout_marginRight="25dp"
                android:layout_marginStart="27dp"
                android:layout_marginTop="2dp"
                android:layout_weight="0.5"
                android:background="@drawable/rounded_corners_top_red">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/roboto_bold"
                    android:gravity="center"
                    android:text="Назад"
                    android:textColor="@color/white"
                    android:textSize="32sp" />

            </FrameLayout>

            <FrameLayout
                android:id="@+id/next_quest_btn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="5dp"
                android:layout_marginEnd="27dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="27dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="2dp"
                android:layout_weight="0.5"
                android:background="@drawable/rounded_corners_top_orange">

                <TextView
                    android:id="@+id/end_test_btn"
                    android:layout_width="match_parent"
