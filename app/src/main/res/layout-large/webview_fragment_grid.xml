                        android:id="@+id/tg_btn_2_5"
                        android:layout_width="43dp"
                        android:layout_height="43dp"
                        android:background="@drawable/checkbox_rounded"
                        android:button="@null"
                        android:fontFamily="@font/roboto_bold"
                        android:gravity="center"
