<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="drawerArrowStyle">@style/DrawerIcon</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="AppTheme">
        <item name="colorPrimary">@color/white</item>
    </style>

    <style name="DrawerIcon" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/white</item>
    </style>

    <style name="CardView." parent="CardView">
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:fontFamily">@font/open_sans_regular</item>
    </style>

    <style name="TextView" parent="android:Widget.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/open_sans_regular</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="CardView.ticketsLeft" parent="CardView">
        <item name="cardBackgroundColor">@color/blue</item>
        <item name="cardCornerRadius">15dp</item>
        <item name="android:layout_marginLeft">35dp</item>
    </style>

    <style name="CardView.ticketsRight" parent="CardView">
        <item name="android:layout_marginRight">35dp</item>
        <item name="android:layout_marginLeft">35dp</item>
        <item name="cardCornerRadius">15dp</item>
        <item name="cardBackgroundColor">@color/blue</item>

    </style>

    <style name="radioButton." parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:width">30dp</item>
        <item name="android:height">30dp</item>
        <item name="android:background">@drawable/checkbox_rectangle</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="textViewWebView" parent="TextView">
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="android:textAppearance">@style/Base.TextAppearance.AppCompat.Large</item>
    </style>

    <style name="CardViewContenMain_left" parent="CardView">
        <item name="cardCornerRadius">14dp</item>
        <item name="android:layout_marginBottom">15dp</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_marginLeft">63dp</item>
        <item name="android:layout_marginRight">18dp</item>
        <item name="android:layout_marginStart" tools:ignore="NewApi">63dp</item>
        <item name="android:layout_marginEnd" tools:ignore="NewApi">18dp</item>
        <item name="cardElevation">0dp</item>
        <item name="cardMaxElevation">0dp</item>
    </style>

    <style name="CardViewContenMain_right" parent="CardView">
        <item name="cardCornerRadius">14dp</item>
        <item name="android:layout_marginBottom">15dp</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_marginLeft">18dp</item>
        <item name="android:layout_marginRight">63dp</item>
        <item name="android:layout_marginStart" tools:ignore="NewApi">18dp</item>
        <item name="android:layout_marginEnd" tools:ignore="NewApi">63dp</item>
        <item name="cardElevation">0dp</item>
        <item name="cardMaxElevation">0dp</item>
    </style>

</resources>
